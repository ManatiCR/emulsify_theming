{%
  set link_classes = [
    is_active ? 'is-active' : ''
  ]
%}

{% set link_base_class = link_base_class|default('link') %}

<div class="wrapper"> 
  {% for key, item in links %}
    <a
      class="link--alt{% if key == 0 %} is-active{% endif %}"
      {{ bem(link_base_class, item.link_modifiers, link_blockname) }}
      href="{{ item.url }}"
    >
      {{ item.text }}
    </a>
  {% endfor %}
</div>